#!/usr/bin/env perl

use strict;
use warnings;

die "Usage: explstr <string>" unless $ARGV[0];

my $string = $ARGV[0];

# Stolen from/Thanks Pete
my @chars = split(//, $string);

my $explain;
for my $char ( @chars ) {
    my $ord = ord($char);
    if ( $ord > 126 ) {
        my $hex = sprintf("%x", $ord);
        $explain .= '\x{' . $hex . '}';
    } else {
        $explain .= $char;
    }
}

print $explain . "\n";

exit(1);
