## PATH (ripped from rtomayko's bashrc)
PATH="$PATH:/usr/local/sbin:/usr/sbin:/sbin"
PATH="/usr/local/bin:$PATH"

# put ~/bin on PATH if you have it
test -d "$HOME/bin" &&
PATH="$HOME/bin:$PATH"

## editors
EDITOR=vim
export EDITOR

## colours
export TERM="xterm-color"

##lazy-shell
alias gimme='history | grep -v grep | grep'
alias show='ps aux | grep -v grep | grep'
alias count='ps aux | grep -v grep | grep -c'
alias RM='rm -rf'
alias t='prove -lvr'
alias pod='perldoc'
alias g='git'

## perl stuff
# find the version number of a Perl module
function pmv {
   perl -M$1\ 9999
}
# make 'mvim Foo::Bar::Baz' work
function mvim {
    set -- "${@//:://}"
    module="lib/${@/%/.pm}"
    testclass="t/lib/${@/%/.pm}"
    if [ -f $module ]; then
        command mvim $module
    elif [ -f $testclass ]; then
        command mvim $testclass
    else
        command mvim "${@}"
    fi
}

if [ -f $(brew --prefix)/etc/bash_completion ]; then
    . $(brew --prefix)/etc/bash_completion
fi

## programming language version managers
# perlbrew
[[ -s $HOME/perl5/perlbrew/etc/bashrc ]] && source $HOME/perl5/perlbrew/etc/bashrc
