[user]
    name = Adam Taylor
    email = adamjctaylor@gmail.com 

[color]
    diff = auto
    status = auto
    branch = auto
    ui = auto
    interactive = auto

[alias]
    tree = log --pretty=oneline --topo-order --graph --abbrev-commit --decorate
    s   = status
    l   = log
    d   = diff
    p   = push
    co  = checkout
    ca  = commit -a
    cam = commit -a -m
    caa = commit -a --amend
    dryclean   = clean -n -d -x ./
    forceclean = clean -d -x -f ./

# Track rebase conflict resolutions for replaying with rerere
# https://git-scm.com/book/en/v2/Git-Tools-Rerere
[rerere]
    enabled = true

# always be rebasing
[pull]
    rebase = true

# always be rebasing, even with a dirty working tree...
[rebase]
    autoStash = true

[merge]
    log = true
    summary = true
    ff = false